@model IEnumerable<MakkaouiFin.Models.Panier>

@{
    ViewData["Title"] = "List of Paniers";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>

                <td class="align-middle">
                    <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.PanierID"><i class="bi bi-pencil-square"></i>Edit</a> |
                    <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.PanierID"><i class="bi bi-eye"></i>Details</a> |
                    <a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.PanierID"><i class="bi bi-trash"></i>Delete</a>

                </td>


            </tr>
        }
    </tbody>
</table>